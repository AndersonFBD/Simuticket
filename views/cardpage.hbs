<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/cardPage.css" />
    <title>Eventos</title>
  </head>
  <body>
    {{> header title = "selecione o evento"}}
    <main class="content">
    {{#if admin}}
      {{#if event}}
        {{#each data}}
          <div class="event" onclick="location.href='/events/{{_id}}'">
            <h3>nome: {{EventName}}</h3>
            <h5>Local: {{EventAddress}}</h5>
            <p>Data: {{EventDate}}</p>
          </div>
        {{/each}}
      {{/if}}
      {{#if type}}
        {{#each data}}
          <div
            class="event"
          >
            <h3>{{typeName}}</h3>
            <h5>disponível: {{vacancies}}</h5>
            <p>valor: {{price}}</p>
            <div>
              {{> addTicket type=_id max=vacancies}}
            </div>
            <button onclick="location.href='/types/edit/{{_id}}'">editar</button>
            <form action="/types/delete/{{_id}}" method="post">
            <input type="submit" value="remover">
            </form>
          </div>
        {{/each}}
      {{/if}}
    {{/if}}
    {{#if user}}
      {{#if event}}
        {{#each data}}
          <div class="event" onclick="location.href='/events/{{_id}}'">
            <h3>nome: {{EventName}}</h3>
            <h5>Local: {{EventAddress}}</h5>
            <p>Data: {{EventDate}}</p>
          </div>
        {{/each}}
      {{/if}}
      {{#if type}}
        {{#each data}}
          <div
            class="event"
          >
            <h3>{{typeName}}</h3>
            <h5>disponível: {{vacancies}}</h5>
            <p>valor: {{price}}</p>
            <div>
              {{> addTicket type=_id max=vacancies}}
            </div>
          </div>
        {{/each}}
      {{/if}}
    {{/if}}
    </main>
  </body>
</html>